@page "/{userName}/{id}"
@model App.Pages.User.PostDetailModel
@{
    ViewData["Title"] = "PostDetail";
}

<style>
    .published-date {
        margin-right: 0.75rem;
    }
</style>

@{
    if (Model.Post == null)
    {
        <div>該当の投稿はありません。</div>
    }
    else
    {
        <h1>
            @Model.Post.Title
        </h1>
        if (Model.Tags != null && Model.Tags.Count > 0)
        {
            foreach (var tag in Model.Tags)
            {
                <a href="/tag/@tag.TagName" class="badge badge-pill badge-primary">
                    @tag.TagName
                </a>
            }

        }

        <div>
            <svg style="margin-bottom: 0.15rem;" width="1rem" height="1rem" viewBox="0 0 16 16" class="bi bi-person-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M13.468 12.37C12.758 11.226 11.195 10 8 10s-4.757 1.225-5.468 2.37A6.987 6.987 0 0 0 8 15a6.987 6.987 0 0 0 5.468-2.63z" />
                <path fill-rule="evenodd" d="M8 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                <path fill-rule="evenodd" d="M8 1a7 7 0 1 0 0 14A7 7 0 0 0 8 1zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z" />
            </svg>
            <a href="/@Model.UserName">
                @Model.UserName
            </a>
        </div>
        <div>
            <svg width="1rem" height="1.0rem" style="margin-bottom: 0.2rem;" viewBox="0 0 16 16" class="bi bi-clock" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm8-7A8 8 0 1 1 0 8a8 8 0 0 1 16 0z" />
                <path fill-rule="evenodd" d="M7.5 3a.5.5 0 0 1 .5.5v5.21l3.248 1.856a.5.5 0 0 1-.496.868l-3.5-2A.5.5 0 0 1 7 9V3.5a.5.5 0 0 1 .5-.5z" />
            </svg>
            <text>投稿日: </text>
            <time datetime="@Model.Post.PublishedDate.ToString("yyyy-MM-ddTHH:mm:ssZ")"
                  itemprop="PublishedDate"
                  class="published-date">
                @Model.Post.PublishedDate.ToString("yyyy-MM-dd")
            </time>
            <svg width="1rem" height="1.0rem" style="margin-bottom: 0.2rem;" viewBox="0 0 16 16" class="bi bi-clock-history" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M8.515 1.019A7 7 0 0 0 8 1V0a8 8 0 0 1 .589.022l-.074.997zm2.004.45a7.003 7.003 0 0 0-.985-.299l.219-.976c.383.086.76.2 1.126.342l-.36.933zm1.37.71a7.01 7.01 0 0 0-.439-.27l.493-.87a8.025 8.025 0 0 1 .979.654l-.615.789a6.996 6.996 0 0 0-.418-.302zm1.834 1.79a6.99 6.99 0 0 0-.653-.796l.724-.69c.27.285.52.59.747.91l-.818.576zm.744 1.352a7.08 7.08 0 0 0-.214-.468l.893-.45a7.976 7.976 0 0 1 .45 1.088l-.95.313a7.023 7.023 0 0 0-.179-.483zm.53 2.507a6.991 6.991 0 0 0-.1-1.025l.985-.17c.067.386.106.778.116 1.17l-1 .025zm-.131 1.538c.033-.17.06-.339.081-.51l.993.123a7.957 7.957 0 0 1-.23 1.155l-.964-.267c.046-.165.086-.332.12-.501zm-.952 2.379c.184-.29.346-.594.486-.908l.914.405c-.16.36-.345.706-.555 1.038l-.845-.535zm-.964 1.205c.122-.122.239-.248.35-.378l.758.653a8.073 8.073 0 0 1-.401.432l-.707-.707z" />
                <path fill-rule="evenodd" d="M8 1a7 7 0 1 0 4.95 11.95l.707.707A8.001 8.001 0 1 1 8 0v1z" />
                <path fill-rule="evenodd" d="M7.5 3a.5.5 0 0 1 .5.5v5.21l3.248 1.856a.5.5 0 0 1-.496.868l-3.5-2A.5.5 0 0 1 7 9V3.5a.5.5 0 0 1 .5-.5z" />
            </svg>
            <text>更新日: </text>
            <time datetime="@Model.Post.UpdatedDate.ToString("yyyy-MM-ddTHH:mm:ssZ")"
                  itemprop="UpdatedDate"
                  class="updated-date">
                @Model.Post.UpdatedDate.ToString("yyyy-MM-dd")
            </time>
        </div>
        <hr />
        <div>
            @Html.Raw(Model.Post.Description)
        </div>
    }
}