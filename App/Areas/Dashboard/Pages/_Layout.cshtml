@{
    Layout = "_DashboardLayout.cshtml";
    var feature = this.Url.ActionContext.ActionDescriptor.DisplayName.Split("/")[1].ToLower();

    string PostsActive = "";
    string CommentsActive = "";
    string ConfigurationActive = "";

    switch (feature)
    {
        case "posts":
            PostsActive = "active";
            break;
        case "comments":
            CommentsActive = "active";
            break;
        case "configuration":
            ConfigurationActive = "active";
            break;
        default:
            break;
    }

}

<div>
    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a class="nav-link disabled" href="#" style="font-size: x-large; color: #000;">Dashboard</a>
                </li>
                <li class="nav-item"><a id="posts" class="nav-link @PostsActive" href="/Dashboard/Posts">投稿一覧</a></li>
                <li class="nav-item"><a id="comments" class="nav-link @CommentsActive" href="/Dashboard/Comments">コメント</a></li>
                <li class="nav-item"><a id="configuration" class="nav-link @ConfigurationActive" href="/Dashboard/Configuration">設定</a></li>
            </ul>
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
